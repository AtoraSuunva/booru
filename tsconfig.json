{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist/",
    "rootDir": "./src",
    "emitBOM": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
